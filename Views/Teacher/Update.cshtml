@model ElliotBrownFordAssignment03ForHttp5112.Models.Teacher
{
    ViewBag.Title = "Update";
}

@{
    ViewBag.Title = "New";
}

<h2>Update Teacher</h2>
<a class="navlink" href="/Teacher/Show/@Model.TeacherId">Back To Teacher</a>
<form method="POST" action="/Teacher/Update/@Model.TeacherId">
    <div>
        <label for="TeacherFname">First Name:</label>
        <input type="text" id="TeacherFname" name="TeacherFname" value="@Model.TeacherFname" />
    </div>
    <div>
        <label for="TeacherLname">Last Name:</label>
        <input type="text" id="TeacherLname" name="TeacherLname" value="@Model.TeacherLname" />
    </div>

    <div>
        <label for="EmployeeNumber">Employee Number:</label>
        <input type="text" id="EmployeeNumber"" name="EmployeeNumber" value="EmployeeNumber" />
    </div>

    <div>
        <label for="Hiredate">Hire Date:</label>
        <input type="datetime" id="Hiredate" name="Hiredate" value="Hiredate" />
    </div>

    <div>
        <label for="Salary">Salary:</label>
        <input type="number" id="Salary" step="any" name="Salary" value="Salary" />
    </div>
    <div>
        <input type="submit" value="Update Teacher" />
    </div>
</form>
